{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
